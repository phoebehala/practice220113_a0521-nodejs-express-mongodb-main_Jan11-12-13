<%- include('../includes/head.ejs') %>
<body>
    <%- include('../includes/nav.ejs') %>

    <main class="container mt-6">
        <h1 class="title">Cart Page</h1>
        <% if(products.length > 0) { %>
            <div class="columns is-4 m-4">
                <% for(let product of products) { %>
                    <div class="column is-one-quarter">
                        <div class="card">
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-left">
                                        <div class="media-content">
                                            <!-- <p class="title is-4"><%= product.title%></p>
                                            <p class="subtitle is-6">$<%= product.price %></p> -->
                                            <p class="subtitle is-6">Quantity: <%= product.quantity %></p> 
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" name="productId" value="<%= product.productData.id %>" />
                                    <a class="card-footer-item" href="#" onclick="this.closest('form').submit();return false;" >Delete</a>
                                </form>
                            </footer>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <h1 class="title">No Cart Items Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>